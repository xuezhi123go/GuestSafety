<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:paddingRight="5dip"
    android:background="@drawable/degree_btn_color"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/record_item_layout_checkbox"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/record_item_layout_tv_name"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="@string/visit_name"
            android:gravity="center_vertical"
            android:minEms="2"
            android:drawablePadding="5dip"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/record_item_layout_tv_cardnumber"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:minEms="2"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_height="wrap_content"
        android:text="@string/visit_time"
        />
    <TextView
        android:id="@+id/record_item_layout_tv_relate"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:minEms="2"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_height="wrap_content"
        android:text="@string/visit_time"
        />
    <TextView
        android:id="@+id/record_item_layout_tv_time"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:minEms="2"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_height="wrap_content"
        android:text="@string/visit_time"
        />
</LinearLayout>